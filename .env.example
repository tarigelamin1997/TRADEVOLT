# Database Configuration
# PostgreSQL connection string from Neon, Supabase, or other provider
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# Clerk Authentication (https://clerk.com)
# Get these from your Clerk dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key-here
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key-here

# Anthropic API (https://console.anthropic.com)
# For AI-powered trade insights
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Stripe Payment Processing (https://stripe.com)
# Test keys for development, live keys for production
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# MetaAPI Configuration (https://metaapi.cloud)
# For MetaTrader 4/5 broker integration
METAAPI_TOKEN=your-metaapi-token-here
METAAPI_REGION=new-york  # Options: new-york, london, singapore

# Security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# Optional: cTrader Integration
CTRADER_CLIENT_ID=your-ctrader-client-id
CTRADER_CLIENT_SECRET=your-ctrader-client-secret
CTRADER_REDIRECT_URI=http://localhost:3000/api/auth/ctrader/callback